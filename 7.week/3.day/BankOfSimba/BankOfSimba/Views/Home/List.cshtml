@model BankOfSimba.Models.BankAccount
@{ var index = 1; }

<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Bank of Simba</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body style="background-image: url(http://media2.giphy.com/media/iSCrkM8ib0uti/giphy.gif); background-repeat:no-repeat; background-size: cover">
    <h1 style = "text-align:center; padding: 5px; font-size: 40px">
        Bank of Simba
    </h1>
    <table style="border: 1px solid black; background-color: palegoldenrod; color: darkgoldenrod; margin: auto">
        <tr>
            <th style="border: 1px solid black; padding: 2px">Index</th>
            <th style="border: 1px solid black; padding: 2px">Name</th>
            <th style="border: 1px solid black; padding: 2px">Balance</th>
            <th style="border: 1px solid black; padding: 2px">Type</th>
            <th style="border: 1px solid black; padding: 2px">Owner</th>
            <th style="border: 1px solid black; padding: 2px">Good/Bad</th>
        </tr>
        @foreach (var client in Model.clients)
        {
            <tr style=" @((@client.IsKing) ? "background-color: gold; color: cornsilk" : "background-color: lightgoldenrodyellow; color: darkgoldenrod") ">
                <td style="border: 1px solid black; padding: 2px">@index</td>
                <td style="border: 1px solid black; padding: 2px">@client.Name</td>
                <td style="border: 1px solid black; padding: 2px">@client.Balance</td>
                <td style="border: 1px solid black; padding: 2px">@client.AnimalType</td>
                <td style="border: 1px solid black; padding: 2px">@((client.IsKing) ? "King" : string.Empty)</td>
                <td style="border: 1px solid black; padding: 2px">@((client.IsGood) ? "Good Guy" : "Bad Guy")</td>
            </tr>
            index++;
        }
    </table>

</body>
</html>

