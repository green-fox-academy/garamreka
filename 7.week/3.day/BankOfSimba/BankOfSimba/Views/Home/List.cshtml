@model BankOfSimba.Models.BankAccount
@{ var index = 1; }

<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
    <table style="border: 1px solid black; background-color: palegoldenrod; color: darkgoldenrod">
        <tr>
            <th style="border: 1px solid black; padding: 5px">Index</th>
            <th style="border: 1px solid black; padding: 5px">Name</th>
            <th style="border: 1px solid black; padding: 5px">Balance</th>
            <th style="border: 1px solid black; padding: 5px">Type</th>
            <th style="border: 1px solid black; padding: 5px">Owner</th>
            <th style="border: 1px solid black; padding: 5px">Good/Bad</th>
        </tr>
        @foreach (var client in Model.clients)
        {
            <tr style=" @((@client.IsKing) ? "background-color: gold; color: cornsilk" : "background-color: lightgoldenrodyellow; color: darkgoldenrod") ">
                <td style="border: 1px solid black; padding: 5px">@index</td>
                <td style="border: 1px solid black; padding: 5px">@client.Name</td>
                <td style="border: 1px solid black; padding: 5px">@client.Balance</td>
                <td style="border: 1px solid black; padding: 5px">@client.AnimalType</td>
                <td style="border: 1px solid black; padding: 5px">@((client.IsKing) ? "King" : string.Empty)</td>

                @switch (client.IsGood)
                {
                    case true:
                        <td style="border: 1px solid black; padding: 5px">Good guy</td>
                        break;
                    case false:
                        <td style="border: 1px solid black; padding: 5px">Bad guy</td>
                        break;
                }
            </tr>


            index++;
        }
    </table>

</body>
</html>

